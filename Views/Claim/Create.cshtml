@model CMCS.web2.Models.ClaimCreateViewModel
@{
    ViewData["Title"] = "Submit New Claim";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Submit New Claim</h4>
            </div>
            <div class="card-body">
                <!-- User Information Display -->
                <div class="alert alert-info">
                    <h6><i class="fas fa-user me-2"></i>User Information</h6>
                    <div class="row">
                        <div class="col-md-4"><strong>Name:</strong> @Model.LecturerName</div>
                        <div class="col-md-4"><strong>Email:</strong> @Model.LecturerEmail</div>
                        <div class="col-md-4"><strong>Hourly Rate:</strong> €@Model.HourlyRate.ToString("N2")</div>
                    </div>
                </div>

                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="HoursWorked" class="form-label">Hours Worked *</label>
                                <input asp-for="HoursWorked" class="form-control" type="number" step="0.25" min="0.25" max="180" placeholder="0.00">
                                <span asp-validation-for="HoursWorked" class="text-danger"></span>
                                <div class="form-text">Maximum 180 hours per month</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Total Amount</label>
                                <input type="text" class="form-control" value="€0.00" readonly id="totalAmount">
                                <div class="form-text">Calculated: Hours × Hourly Rate</div>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Notes" class="form-label">Notes</label>
                        <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Additional information about this claim..."></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="SupportingDocument" class="form-label">Supporting Document *</label>
                        <input asp-for="SupportingDocument" class="form-control" type="file" accept=".pdf,.docx,.xlsx">
                        <div class="form-text">Allowed files: PDF, DOCX, XLSX (Max 5MB)</div>
                        <span asp-validation-for="SupportingDocument" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="@Url.Action("MyClaims", "Claim")" class="btn btn-outline-secondary me-md-2">Cancel</a>
                        <button type="submit" class="btn btn-primary">Submit Claim</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            function calculateTotal() {
                var hours = parseFloat($('#HoursWorked').val()) || 0;
                var rate = @Model.HourlyRate; // Use the rate from model
                var total = hours * rate;
                $('#totalAmount').val('€' + total.toFixed(2));
            }

            $('#HoursWorked').on('input', calculateTotal);
            calculateTotal();
        });
    </script>
}