@{
    ViewData["Title"] = "Home";
    var isAuthenticated = !string.IsNullOrEmpty(Context.Session.GetString("UserName"));
    var userRole = Context.Session.GetString("UserRole");
}

<div class="row justify-content-center">
    <div class="col-lg-10 text-center">
        <div class="mb-5">
            <h1 class="display-4 text-primary mb-3">
                <i class="fas fa-file-invoice-dollar"></i>
            </h1>
            <h1 class="display-6 mb-3">Welcome to CMCS Claims System</h1>
            <p class="lead text-muted mb-4">
                Streamline your claims submission and management process with our secure and efficient platform.
            </p>
        </div>

        @if (!isAuthenticated)
        {
            <div class="row g-4 justify-content-center">
                <div class="col-md-6">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center py-5">
                            <div class="text-primary mb-3">
                                <i class="fas fa-sign-in-alt fa-3x"></i>
                            </div>
                            <h5 class="card-title">Login to System</h5>
                            <p class="card-text text-muted">Access your account to submit claims and track their progress.</p>
                            <a href="@Url.Action("Login", "Account")" class="btn btn-primary btn-lg">Login Now</a>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="row g-4">
                <!-- Lecturer Features -->
                @if (userRole == "Lecturer")
                {
                    <div class="col-md-4">
                        <div class="card h-100 border-0 shadow-sm">
                            <div class="card-body text-center">
                                <div class="text-primary mb-3">
                                    <i class="fas fa-plus-circle fa-2x"></i>
                                </div>
                                <h5 class="card-title">Submit Claim</h5>
                                <p class="card-text text-muted">Submit a new claim for hours worked with supporting documentation.</p>
                                <a href="@Url.Action("Create", "Claim")" class="btn btn-primary">Get Started</a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card h-100 border-0 shadow-sm">
                            <div class="card-body text-center">
                                <div class="text-success mb-3">
                                    <i class="fas fa-list-alt fa-2x"></i>
                                </div>
                                <h5 class="card-title">View My Claims</h5>
                                <p class="card-text text-muted">Track the status of your submitted claims and download documents.</p>
                                <a href="@Url.Action("MyClaims", "Claim")" class="btn btn-success">View Claims</a>
                            </div>
                        </div>
                    </div>
                }

                <!-- Admin Features -->
                @if (userRole == "ProgrammeCoordinator" || userRole == "AcademicManager" || userRole == "HR")
                {
                    <div class="col-md-4">
                        <div class="card h-100 border-0 shadow-sm">
                            <div class="card-body text-center">
                                <div class="text-warning mb-3">
                                    <i class="fas fa-user-shield fa-2x"></i>
                                </div>
                                <h5 class="card-title">Admin Portal</h5>
                                <p class="card-text text-muted">Coordinator and manager access for claim verification and approval.</p>
                                <div class="btn-group">
                                    @if (userRole == "ProgrammeCoordinator" || userRole == "HR")
                                    {
                                        <a href="@Url.Action("CoordinatorView", "Admin")" class="btn btn-warning">Coordinator</a>
                                    }
                                    @if (userRole == "AcademicManager" || userRole == "HR")
                                    {
                                        <a href="@Url.Action("ManagerView", "Admin")" class="btn btn-outline-warning">Manager</a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <!-- HR Features -->
                @if (userRole == "HR")
                {
                    <div class="col-md-4">
                        <div class="card h-100 border-0 shadow-sm">
                            <div class="card-body text-center">
                                <div class="text-info mb-3">
                                    <i class="fas fa-users fa-2x"></i>
                                </div>
                                <h5 class="card-title">User Management</h5>
                                <p class="card-text text-muted">Manage all system users, create accounts, and set permissions.</p>
                                <a href="@Url.Action("Users", "HR")" class="btn btn-info">Manage Users</a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card h-100 border-0 shadow-sm">
                            <div class="card-body text-center">
                                <div class="text-secondary mb-3">
                                    <i class="fas fa-chart-bar fa-2x"></i>
                                </div>
                                <h5 class="card-title">Reports</h5>
                                <p class="card-text text-muted">Generate comprehensive reports for claims and user data.</p>
                                <a href="@Url.Action("Reports", "HR")" class="btn btn-secondary">View Reports</a>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Quick Stats for Authenticated Users -->
            <div class="row mt-5">
                <div class="col-12">
                    <div class="card shadow-sm">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="fas fa-tachometer-alt me-2"></i>Quick Access</h5>
                        </div>
                        <div class="card-body">
                            <div class="row text-center">
                                @if (userRole == "Lecturer")
                                {
                                    <div class="col-md-3">
                                        <a href="@Url.Action("Create", "Claim")" class="btn btn-outline-primary btn-lg w-100 py-3">
                                            <i class="fas fa-plus fa-2x mb-2"></i><br>
                                            New Claim
                                        </a>
                                    </div>
                                    <div class="col-md-3">
                                        <a href="@Url.Action("MyClaims", "Claim")" class="btn btn-outline-success btn-lg w-100 py-3">
                                            <i class="fas fa-list fa-2x mb-2"></i><br>
                                            My Claims
                                        </a>
                                    </div>
                                }
                                @if (userRole == "ProgrammeCoordinator" || userRole == "HR")
                                {
                                    <div class="col-md-3">
                                        <a href="@Url.Action("CoordinatorView", "Admin")" class="btn btn-outline-warning btn-lg w-100 py-3">
                                            <i class="fas fa-check-circle fa-2x mb-2"></i><br>
                                            Verify Claims
                                        </a>
                                    </div>
                                }
                                @if (userRole == "AcademicManager" || userRole == "HR")
                                {
                                    <div class="col-md-3">
                                        <a href="@Url.Action("ManagerView", "Admin")" class="btn btn-outline-info btn-lg w-100 py-3">
                                            <i class="fas fa-thumbs-up fa-2x mb-2"></i><br>
                                            Approve Claims
                                        </a>
                                    </div>
                                }
                                @if (userRole == "HR")
                                {
                                    <div class="col-md-3">
                                        <a href="@Url.Action("Users", "HR")" class="btn btn-outline-dark btn-lg w-100 py-3">
                                            <i class="fas fa-user-cog fa-2x mb-2"></i><br>
                                            Manage Users
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>