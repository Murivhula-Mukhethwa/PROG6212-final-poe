﻿
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMCS Claims System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .navbar-brand {
            font-weight: bold;
        }

        .claim-card {
            transition: transform 0.2s;
        }

            .claim-card:hover {
                transform: translateY(-2px);
            }

        .status-badge {
            font-size: 0.8em;
        }

        .user-welcome {
            background: linear-gradient(45deg, #007bff, #0056b3);
            color: white;
            padding: 10px 0;
        }
    </style>
</head>
<body>
    @{
        var userName = Context.Session.GetString("UserName");
        var userRole = Context.Session.GetString("UserRole");
        var isAuthenticated = !string.IsNullOrEmpty(userName);
    }

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <i class="fas fa-file-invoice-dollar me-2"></i>CMCS Claims
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">Home</a>
                    </li>
                    @if (isAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Create", "Claim")">Submit Claim</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("MyClaims", "Claim")">My Claims</a>
                        </li>
                    }
                </ul>
                <ul class="navbar-nav">
                    @if (isAuthenticated)
                    {
                        <!-- Admin Dropdown -->
                        @if (userRole == "ProgrammeCoordinator" || userRole == "AcademicManager" || userRole == "HR")
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-shield me-1"></i>Admin
                                </a>
                                <ul class="dropdown-menu">
                                    @if (userRole == "ProgrammeCoordinator" || userRole == "HR")
                                    {
                                        <li><a class="dropdown-item" href="@Url.Action("CoordinatorView", "Admin")">Coordinator View</a></li>
                                    }
                                    @if (userRole == "AcademicManager" || userRole == "HR")
                                    {
                                        <li><a class="dropdown-item" href="@Url.Action("ManagerView", "Admin")">Manager View</a></li>
                                    }
                                    @if (userRole == "HR")
                                    {
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" href="@Url.Action("Users", "HR")">User Management</a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("Reports", "HR")">Reports</a></li>
                                    }
                                </ul>
                            </li>
                        }

                        <!-- User Info and Logout -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user me-1"></i>@userName
                            </a>
                            <ul class="dropdown-menu">
                                <li><span class="dropdown-item-text">Role: @userRole</span></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                        <button type="submit" class="dropdown-item">
                                            <i class="fas fa-sign-out-alt me-1"></i>Logout
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Login", "Account")">
                                <i class="fas fa-sign-in-alt me-1"></i>Login
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    @if (isAuthenticated)
    {
        <div class="user-welcome">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <small>Welcome, <strong>@userName</strong> (@userRole)</small>
                    </div>
                    <div class="col-md-6 text-end">
                        <small>@DateTime.Now.ToString("dddd, MMMM dd, yyyy")</small>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="container mt-4">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @RenderBody()
    </div>

    <footer class="bg-light mt-5 py-4">
        <div class="container text-center">
            <p class="text-muted mb-0">&copy; CMCS Management System</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>